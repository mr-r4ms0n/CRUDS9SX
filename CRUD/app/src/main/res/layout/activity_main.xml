<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/datos"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etLAddLNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:hint="Ingrese nombre"
                android:inputType="textPersonName"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/etLAddLApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:hint="Ingrese apellido"
                android:inputType="textPersonName"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/etLAddLCorreoE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:hint="Ingrese correo"
                android:inputType="textPersonName"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/etLAddLContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:hint="Ingrese contraseña"
                android:inputType="textPersonName"
                android:textSize="15sp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/listaElementos"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/lwAddLLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_marginBottom="5dp"
            android:smoothScrollbar="true"
            />

    </LinearLayout>



</LinearLayout>